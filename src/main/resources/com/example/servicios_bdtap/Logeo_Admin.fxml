<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.servicios_bdtap.controllers.LogeoAdminController"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Ingrese su usuario y contraseña" textAlignment="CENTER" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Usuario:"/>
                <TextField fx:id="txt_Usuario"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Contaseña:"/>
                <TextField fx:id="txt_Contrasena"/>
            </HBox>
            <Button fx:id="btn_Acceder" text="Acceder"/>
        </VBox>
    </center>

</BorderPane>
