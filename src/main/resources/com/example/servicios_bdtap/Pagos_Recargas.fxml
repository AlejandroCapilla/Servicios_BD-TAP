<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.servicios_bdtap.controllers.PagosRecargasController"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox spacing="20" alignment="TOP_CENTER">
            <Label text="Que desea realizar?" textAlignment="CENTER" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Clave Pago:"/>
                <TextField fx:id="txt_PSoR"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Ingrese su clave usuario:"/>
                <TextField fx:id="txt_Usuario"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <RadioButton fx:id="rbt_PagoSer" text="Pago de servicios"/>
                <RadioButton fx:id="rbt_Recarga" text="Hacer una Recarga"/>
            </HBox>
            <HBox spacing="20" alignment="TOP_CENTER">
                <ComboBox fx:id="cbo_Servicios"/>
                <ComboBox fx:id="cbo_Recargas"/>
            </HBox>
            <HBox spacing="10" alignment="TOP_CENTER">
                <Label text="Comision:"/>
                <TextField fx:id="txt_Comision"/>
                <Label text="Monto:"/>
                <TextField fx:id="txt_Monto"/>
                <Label text="Num.Referencia:"/>
                <TextField fx:id="txt_NumRef"/>
                <VBox spacing="10">
                    <HBox spacing="10">
                        <Label text="Telefono:"/>
                        <TextField fx:id="txt_Telefono"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Confirmacion:"/>
                        <TextField fx:id="txt_ConfirmTel"/>
                    </HBox>
                </VBox>
            </HBox>
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="btn_Pagar" text="Realizar Pago"/>
                <Button fx:id="btn_Ticket" text="Generar Ticket"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
